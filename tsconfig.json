{
   "compilerOptions": {
      "lib": [
         "dom",
         "es6",
         "ES2018",
         "esnext.asynciterable"
       ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "baseUrl": "./",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "sourceMap": true
   },
   "exclude": [
     "node_modules"
   ],
   "include": [
     "./src/**/*.tsx",
     "./src/**/*.ts"
   ]
}